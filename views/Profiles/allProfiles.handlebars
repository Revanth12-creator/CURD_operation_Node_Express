                           <button class="btn btn-warning" ><span> <i class="far fa-trash-alt"></i></span></button>
                  </form>                --}}
                          
                    <form action="/profile/deleteUser/{{_id}}?_method=DELETE" method="post" class="allProDele">
                            <input type="hidden" name="_method" value="DELETE" />
                           <button class="btn btn-warning "><span> <i class="far fa-trash-alt"></i></span></button>
                    </form>
                    </td>
                </tbody>
            </tr>
              {{else}}
            {{/each}}
        </table>
    </div>
</section>